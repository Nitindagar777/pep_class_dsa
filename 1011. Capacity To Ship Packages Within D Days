// 1011 leetcode

class Solution {
public:

    bool ship(vector<int>& weights, int D, int cap){
        int days = 1;
        int load = 0;

        for(int i: weights){
            if((load + i) > cap){
                days++;
                load = i;
            }else{
                load += i;
            }
        }
        return days <= D;
    }

    int shipWithinDays(vector<int>& weights, int days) {
        int lo = *max_element(weights.begin(), weights.end());
        int hi = accumulate(weights.begin(), weights.end(), 0);
        while(lo < hi){
            int mid = lo + (hi - lo)/2;
            if(ship(weights, days, mid)){
                hi = mid;
            }else{
                lo = mid + 1;
            }
        }
        return lo;
    }
};
