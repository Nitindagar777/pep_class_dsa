class Solution {
public:
    ListNode* rotateRight(ListNode* head, int k) {
        if(head == NULL || head->next == NULL || k == 0) return head;

        ListNode* tail = head;
        int len = 1;

        while(tail->next){
            tail = tail->next;
            len++;
        }

        k = k % len;
        if(k == 0) return head;

        tail->next = head;

        int move = len - k;
        ListNode* curr = head;

        for(int i = 1; i < move; i++){
            curr = curr->next;
        }

        head = curr->next;
        curr->next = NULL;

        return head;
    }
};
